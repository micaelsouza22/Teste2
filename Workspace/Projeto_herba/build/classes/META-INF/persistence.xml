<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Projeto_herba">
		<class>br.com.herbalife.entidades.Cliente</class>
		<class>br.com.herbalife.entidades.Dadosacompanhamento</class>
		<class>br.com.herbalife.entidades.Endereco</class>
		<class>br.com.herbalife.entidades.Estoque</class>
		<class>br.com.herbalife.entidades.Itempedido</class>
		<class>br.com.herbalife.entidades.Pedido</class>
		<class>br.com.herbalife.entidades.Produto</class>
		<class>br.com.herbalife.entidades.Tipodepagmt</class>
		<class>br.com.herbalife.entidades.Usuario</class>
		
		<properties>
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="micaelkeyboard" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/Projeto_Herba" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.connection.autocommit" value="false" />
			<!-- Cria as tabelas no banco a partir das entidades -->
			<property name="hibernate.hbm2ddl.auto" value="update" />			
		</properties>
		
	</persistence-unit>
</persistence>
